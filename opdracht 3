import os
from fpdf import FPDF
from PIL import Image

def jpgs_to_pdf(source_folder, output_pdf_path):
    pdf = FPDF(unit="pt")  # gebruik punten als eenheid (1 pt = 1/72 inch)
    
    # Alle JPG-bestanden in de map, gesorteerd
    jpg_files = sorted([
        f for f in os.listdir(source_folder)
        if f.lower().endswith(".jpg") or f.lower().endswith(".jpeg")
    ])
    
    if not jpg_files:
        raise ValueError("Geen JPG-bestanden gevonden in de opgegeven map.")
    
    for jpg_file in jpg_files:
        img_path = os.path.join(source_folder, jpg_file)
        
        # Open afbeelding om grootte te bepalen
        with Image.open(img_path) as img:
            width, height = img.size
        
        # Voeg een pagina toe met dezelfde afmetingen als de afbeelding
        pdf.add_page(format=(width, height))
        
        # Voeg de afbeelding toe op positie (0,0) en in originele grootte
        pdf.image(img_path, x=0, y=0, w=width, h=height)
    
    pdf.output(output_pdf_path)
    print(f"PDF succesvol aangemaakt: {output_pdf_path}")

# Voorbeeld gebruik:
# jpgs_to_pdf("/pad/naar/afbeeldingen", "/pad/naar/output.pdf")